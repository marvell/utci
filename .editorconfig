# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

# Python files
[*.py]
indent_style = space
indent_size = 4
max_line_length = 100

# YAML files
[*.{yml,yaml}]
indent_size = 2

# JSON files
[*.json]
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false
max_line_length = 80

# Makefile
[Makefile]
indent_style = tab

# Configuration files
[*.{ini,cfg,toml}]
indent_size = 4

# Shell scripts
[*.sh]
indent_size = 2

# Batch files
[*.{bat,cmd}]
end_of_line = crlf

# Git files
[.git*]
indent_size = 2